<div class="container">
<h1>Nuevo Entrenamiento</h1>

<%= form_with(model: @training, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :duration, "DuraciÃ³n (en minutos)" %>
    <%= form.number_field :duration, class: 'form-control', min: 1 %>
  </div>

  <div class="form-group">
    <%= form.submit 'Crear Entrenamiento', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Volver', trainings_path, class: 'btn btn-secondary' %>
</div>